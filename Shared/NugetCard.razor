@inject ContentService  Content

@if (Nugets != null)
{
    <div class="card-deck justify-content-center">
        @foreach (var n in Nugets)
        {
            <div class="card shadow m-2">
                <div class="card-body">
                    <div class="row card-title">
                        <img src="@n.Data?.iconUrl" style="height: 45px; position: absolute; top: 5px" />
                        <div class="col-1">
                        </div>
                        <a class="col" href="@n.Data?.projectUrl" target="_blank">
                            <h5 class="text-center">@n.Data?.title</h5>
                        </a>
                        <div class="col-auto">
                            <small>Lastest @n.Data?.version</small>
                            <small>@n.Data?.totalDownloads Downloads</small>
                        </div>
                    </div>
                    <div class="col card-text">
                        <p>@n.Data.description</p>
                        <p>@n.Comments</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    Content.Nuget[] Nugets { get; set; }
    protected override async Task OnInitializedAsync()
    {
        Nugets = await Content.GetNugetAsync();
    }
}
